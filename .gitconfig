[push]
	default = simple
[core]
	editor = emacs
	excludesfile = /home/udh/.gitignore_global
[color]
	ui = auto
[alias]
	d     = "!git diff HEAD --color|less -FXR"
	cm    = "!f(){ if [ $# -eq 0 ];then git commit -S; else git commit -S -m \"$@\"; fi }; f"
	b     = "branch"
	#bc    = "!git branch | grep \* | cut -d ' ' -f2"
	bc    = "rev-parse --abbrev-ref HEAD"
	a     = "add"
	ad    = "!f(){ if [ $# -eq 0 ];then git add --all && git d;else git add $@ && git d; fi }; f"
	amd   = "!f(){ if [ $# -eq 0 ];then git commit -S --amend --reuse-message=HEAD; else git commit -S --amend $@; fi }; f"
	ac    = "!f(){ git a ${@:1:$#}; git cm \"${@:$#}\" ; }; f"
	r     = "!f(){ if [ $# -eq 0 ];then git reset HEAD --hard; else git reset $@; fi }; f"
	r1    = "reset HEAD^"
	rh    = "reset --hard"
	s     = "stash"
	pop   = "stash pop"
	p     = "!f(){ if [ $# -eq 0 ];then git push -u origin $(git bc); else git push $@; fi }; f"
	pa    = "push --all"
	f     = "!git pull --ff-only $@ ||git pull $@ "
	chk   = "!f(){ git checkout -b $@ || git checkout $@ ; git f }; f"
	#hist  = "!git log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --color|less -FXRS"
	l     = "!git log --graph --all                 --oneline --decorate --full-history --date-order --color|less -FXR"
	ll    = "!git log --graph --all -10 --numstat   --oneline --decorate --full-history --date-order --color|less -FXR"
	lt    = "!git log --graph --all -20             --oneline --decorate --full-history --date-order --color|less -FXR"
	ltt   = "!git log --graph --all -40             --oneline --decorate --full-history --date-order --color|less -FXR"
	lr    = "!git log --graph --all --since=1.weeks --oneline --decorate --full-history --date-order --color|less -FXR"
	ls    = "!f(){ if [ $# -eq 0 ];then git ls-tree -r HEAD; else git ls-tree $@; fi }; f"
[apply]
	whitespace = fix
[merge]
	ff = false
[commit]
	gpgsign = true
