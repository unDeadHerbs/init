_sh_quote() {
		# Convert arguments into a single quoted string with correct escaping
		# Inspired by https://stackoverflow.com/a/41453954
		# Example:
		# $ _sh_quote ls a b 'c d'
		# > ls a b c\ d
		# Usage: some_command --expects_sub_command "$(_sh_quote "$@")"
		printf ' %q' "$@" | cut -b2-
}

