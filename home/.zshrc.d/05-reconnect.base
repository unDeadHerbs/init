#! /usr/bin/env zsh
source ~/.zshrc.d/01-local
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ] || [ -n "$SSH_CONNECTION" ]; then
		if [[ "$TERM" != "dumb" ]]; then
				if exists screen ; then
						screen -dr >/dev/null && exit
				fi
				if exists tmux ; then
						if [[ "$(tmux ls|grep -v attached|wc -l)" == "1" ]]; then
								tmux attach && exit
						fi
				fi
		fi
fi
